<%- include('../includes/head.ejs') %>

    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/product-card.css" />

    <!-- navigation -->
    <%- include('../includes/navigation.ejs') %>

        <!-- here main body -->
        <main>
            <% if(products.length> 0) { %>
                <ul>
                    <% for(product of products) {%>
                        <li>
                            <%=product.productId.title%> (<%=product.quantity%>)
                        </li>
                        <!-- <button>Delete</button> -->
                        <!-- <a class="btn" href="/delete/<%=product.productId._id%>">Delete</a> -->
                        <form action="/delete-item-cart" method="post">
                            <input type="hidden" value="<%=product.productId._id  %>" name="productId">
                            <input type="hidden" name="_csrf" value="<%=csrfToken%>">
                            <button class="btn" type="submit">Delete</button>
                        </form>
                        <% } %>
                </ul>
                <hr>
                <a href="/orderProduct">Order</a>
                <%} else {%>
                    <div>No product in cart</div>
                    <%} %>
        </main>

        <!-- footer -->
        <%- include('../includes/foot.ejs') %>